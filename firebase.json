{
  "hosting": {
    "public": "build",
    "cleanUrls": true,
    "trailingSlash": false,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/devices",
        "destination": "/alpakka",
        "type": 301
      },
      {
        "source": "/devices/alpakka/manual",
        "destination": "/devices/alpakka/manual/mouse",
        "type": 301
      },
      {
        "source": "/devices/:sub*",
        "destination": "/:sub",
        "type": 301
      },
      {
        "source": "/contribute",
        "destination": "/contribute/open_source",
        "type": 301
      },
      {
        "source": "/db",
        "destination": "/db/stats",
        "type": 301
      }
    ]
  }
}
