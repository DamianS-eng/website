-
  const active = (bool) => bool ? 'active' : 'inactive'

h1.dynamic
  a(class=active(PAGE=='alpakka') href='/alpakka') Alpakka
  a.sub(class=active(SECTION_2=='manual') href=parent.alpakkaManual) Manual
  a.sub(class=active(PAGE=='gallery' || PAGE=='gallery_community') href='/alpakka/gallery') Gallery
  a.sub(class=active(PAGE=='components') href='/alpakka/components') Components
